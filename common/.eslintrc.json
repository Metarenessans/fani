{
  "parser": "@babel/eslint-parser",
  "ignorePatterns": ["*.test.js"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "react-hooks"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "semi": "error",
    "no-unused-vars": "off",
    "no-duplicate-imports": "warn",
    "camelcase": "warn",
    "comma-dangle": ["error", "never"],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    // Пробел перед круглымы скобками при вызове функции
    "func-call-spacing": ["error", "never"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "minimum"
      }
    ],
    // Пробел перед открывающей фигурной скобкой
    "space-before-blocks": "error",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn"  // Checks effect dependencies
  },
  "globals": {
    "dev": true
  }
}